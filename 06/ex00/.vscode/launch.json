	"version": "0.2.0",
	"configurations": [
		{
			"name": "(lldb) Запустить",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/convert",
			"args": ["inff"],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Launch",
			"program": "${workspaceFolder}/<your program>",
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "attach",
			"name": "Attach",
			"program": "${workspaceFolder}/<your program>"
		},

		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug",
			"program": "${workspaceFolder}/convert ",
			"args": ["a"],
			"cwd": "${workspaceFolder}"
		}
	]
}